<script>

	var str = ["biscuit","Fruits","Vegetables","household","aaa"];
	console.log(str.sort())
	var newAr = str.join(" ");
	//join method to convert array in string
	var lcase = newAr.toLowerCase();
	//convert to lowercase;
	var splt = lcase.split(' ');
	//split method to convert string to array
	var caseChange = splt.sort();
	// sort method to sorting array
	console.log(caseChange);
	
	console.log("=======================")
	
	var one = ["ee","dd","aa","b","c"]
	console.log(one.sort())
	
	console.log("=======================localeCompare method below========================")
	
	var two = ["ee","Ad","aa","bB","Cc"]
	two.sort(function(a, b) {
	  //  return a.toLowerCase().localeCompare(b.toLowerCase());
		  return a.localeCompare(b);
	});
	console.log(two);
	
	
</script>

